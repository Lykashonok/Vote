@model List<Entities.TargetModel>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<link href="~/css/table.css" rel="stylesheet" />
<table class="vote__table" style="width: 100%">
    <tr class="table__header">
        <th class="prop__title">@Localizer["id"]</th>
        <th class="prop__title">@Localizer["Name"]</th>
        <th class="prop__title">@Localizer["Description"]</th>
        <th class="prop__title">@Localizer["Actions"]</th>
    </tr>
    @for (int i = 0; i < Model.Count(); i++)
    {
        <tr class="table__user">
            <td class="prop">@Model[i].Id</td>
            <td class="prop">@Model[i].Name</td>
            <td class="prop">@Model[i].Description</td>
            <td class="prop">
                <a href=@Url.Action("TargetDetail", "Admin", new { Id = Model[i].Id })>@Localizer["Detail"]</a>
                <a href=@Url.Action("TargetDelete", "Admin", new { Id = Model[i].Id })>@Localizer["Delete"]</a>
            </td>
        </tr>
    }
</table>