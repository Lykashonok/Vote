@using Microsoft.AspNetCore.Identity
@inject SignInManager<Entities.ApplicationUser> SignInManager
@inject UserManager<Entities.ApplicationUser> UserManager
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@if (SignInManager.IsSignedIn(User))
{
    <a class="layout-navbar__link" href="@Url.Action("Index", "Account")" title="Manage">@User.Identity.Name</a>
    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Vote")">
        <button type="submit" class="layout-navbar__link" style="background-color: transparent; border: none;">@Localizer["Leave"]</button>
    </form>
}
else
{
<a class="layout-navbar__link" asp-area="Identity" asp-page="/Account/Register">@Localizer["Reg"]</a>
<a class="layout-navbar__link" asp-area="Identity" asp-page="/Account/Login">@Localizer["LogIn"]</a>
}
